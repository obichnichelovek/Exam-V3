            </div>

            <div class="credits panel">
                <h4 class="category">Release year</h4>
                <h5 style="margin: 0;">1989</h5>
                <h4 class="category">Author<small>(s)</small></h4>
                <div class="category-content">
                    @foreach (var author in manga.Authors)
                    {
                        <a style="margin: 0 6px 6px 0; font-size: 16px; cursor: pointer; color: #f42536;">@author.Name</a>
                    }
                </div>

                <h4 class="category">Artist<small>(s)</small></h4>
                <div class="category-content">
                    @foreach (var artist in CheckArtists(manga).Artists)
                    {
                        <a style="margin: 0 6px 6px 0; font-size: 16px; cursor: pointer; color: #f42536;">@artist.Name</a>
                    }
                </div>

                <h4 class="category">Publishing<small class="small-s">(s)</small></h4>
                <div class="category-content">
                    @foreach (var publishing in manga.Publishings)
                    {
                        <a href="@publishing.URL" target="_blank" style="margin: 0 6px 6px 0; font-size: 14px; cursor: pointer; color: #f42536;">@publishing.Name</a>
                    }
                </div>

            </div>
        </div>

        <div class="tags-genres panel">
            <h5 style="margin: 0;">Genres</h5>
            <div class="tags-genres-content">
                @foreach (var genre in manga.Genres)
                {
                    <a style="background-color: #F4253664; padding: 2px; color: #f0f0f0; margin: 2px">@genre.Name</a>
                }
            </div>
            <hr class="divider" style="width: 100%;" />
            <h5 style="margin-top: 0; margin-bottom: 2px;">Tags</h5>
            <div class="tags-genres-content">
                @foreach (var tag in manga.Tags)
                {
                    <a style="background-color: #F4253664; padding: 2px; color: #f0f0f0; margin: 2px">@tag.Name</a>
                } 
            </div>
        </div>
    </div>
}

@code {
    private Manga? manga;

    [Parameter]
    public int ID { get; set; }

    protected override async Task OnParametersSetAsync() =>
        manga = await Service.GetMangaByID(ID);

    private static Manga? CheckArtists(Manga? manga)
    {
        if (manga is not null && manga.Artists.Count == 0)
            foreach (var author in manga.Authors)
                manga.Artists.Add(new Artist
                    {
                        ID = author.ID,
                        Name = author.Name,
                        Description = author.Description
                    });

        return manga;
    }
}
