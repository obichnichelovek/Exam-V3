@page "/manga/{id:int}"
@using MangaLibrary.Shared.Models.Manga;
@inject MangaService Service


@if (manga is null)
{
    <div class="loading">
    </div>
}
else
{
    <div class="manga">
        <a href="@manga.Poster" target="_blank"><img title="@manga.Title.English" class="poster" src="@manga.Poster" /></a>
        <div class="content">
            <div class="upper">
                <div class="titles">
                    <h4>@manga.Title.English</h4>
                    <h6 class="japanese">@manga.Title.Japanese<span class="romaji">(@manga.Title.Romaji)</span></h6>
                </div>
                <div class="rating">
                    <div>@(Tools.GetStars(manga.Rating, 22))</div>
                    <h4 style="line-height: 1;">@manga.Rating</h4>
                </div>
            </div>
            <div class="description panel">
                <p class="description-content" id="descriptionContent">
                    @manga.Details.Description
                </p>
                <hr class="divider" />
                <span class="read-more">Read more <svg style="line-height: 1;" xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512"><path d="M233.4 406.6c12.5 12.5 32.8 12.5 45.3 0l192-192c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L256 338.7 86.6 169.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l192 192z" /></svg></span>
            </div>
        </div>
    </div>

    <div class="info">
        <div style="display: flex; flex-direction: column;">
            <div class="menu panel">
